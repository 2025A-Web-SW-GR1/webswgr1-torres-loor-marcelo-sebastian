<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo || 'Lista de Casas - Examen' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }
        .navbar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        }
        .table-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-top: 2rem;
        }
        .table-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
        }
        .table th {
            background-color: #f8f9fa;
            border-top: none;
            font-weight: 600;
            color: #495057;
        }
        .house-image {
            width: 80px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        .price-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-weight: 600;
        }
        .stats-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            border: none;
        }
        .stats-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
        }
        .icon-houses {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }
        .icon-value {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: white;
        }
        .btn-logout {
            background: #dc3545;
            border: none;
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
        }
        .btn-logout:hover {
            background: #c82333;
            transform: translateY(-2px);
        }
        .username-row {
            background-color: #e3f2fd;
            border-left: 4px solid #2196f3;
        }
        .no-data {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-home me-2"></i>Sistema de Casas
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    <i class="fas fa-user me-2"></i>
                    Bienvenido, <strong><%= usuario.nombre || usuario.username %></strong>
                </span>
                <a href="/auth/logout" class="btn btn-logout">
                    <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                </a>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Estadísticas -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card stats-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="stats-icon icon-houses">
                            <i class="fas fa-home fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="mb-0"><%= totalCasas || 0 %></h5>
                            <small class="text-muted">Total de Casas</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card stats-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="stats-icon icon-value">
                            <i class="fas fa-dollar-sign fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">$<%= (valorTotal || 0).toLocaleString() %></h5>
                            <small class="text-muted">Valor Total Inventario</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de Casas -->
        <div class="table-container">
            <div class="table-header">
                <h3 class="mb-0">
                    <i class="fas fa-list me-2"></i>Lista de Casas - Examen de Desarrollo Web II
                </h3>
                <p class="mb-0">Estudiante: Marcelo Torres Loor</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger m-3" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <%= error %>
                </div>
            <% } %>

            <% if (casas && casas.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag me-2"></i>ID</th>
                                <th><i class="fas fa-image me-2"></i>Imagen</th>
                                <th><i class="fas fa-home me-2"></i>Nombre</th>
                                <th><i class="fas fa-dollar-sign me-2"></i>Valor</th>
                                <th><i class="fas fa-user me-2"></i>Usuario</th>
                                <th><i class="fas fa-link me-2"></i>URL Imagen</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% casas.forEach(function(casa, index) { %>
                                <tr class="<%= casa.username === 'marcelo' ? 'username-row' : '' %>">
                                    <td>
                                        <span class="badge bg-primary rounded-pill"><%= casa.id %></span>
                                    </td>
                                    <td>
                                        <% if (casa.imagenURL) { %>
                                            <img src="<%= casa.imagenURL %>" 
                                                 alt="<%= casa.nombre %>" 
                                                 class="house-image"
                                                 onerror="this.src='https://via.placeholder.com/80x60?text=No+Image'">
                                        <% } else { %>
                                            <div class="house-image d-flex align-items-center justify-content-center bg-light">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        <% } %>
                                    </td>
                                    <td>
                                        <strong><%= casa.nombre %></strong>
                                        <% if (casa.username === 'marcelo') { %>
                                            <i class="fas fa-crown text-warning ms-2" title="Usuario del examen"></i>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="price-badge">
                                            $<%= casa.valor.toLocaleString() %>
                                        </span>
                                    </td>
                                    <td>
                                        <code><%= casa.username %></code>
                                        <% if (casa.username === 'marcelo') { %>
                                            <small class="text-muted d-block">Examen</small>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (casa.imagenURL) { %>
                                            <a href="<%= casa.imagenURL %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>
                                        <% } else { %>
                                            <span class="text-muted">Sin imagen</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="no-data">
                    <i class="fas fa-home fa-3x text-muted mb-3"></i>
                    <h5>No hay casas registradas</h5>
                    <p class="text-muted">No se encontraron casas en la base de datos.</p>
                </div>
            <% } %>
        </div>

        <!-- Footer del Examen -->
        <div class="text-center mt-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h6><i class="fas fa-graduation-cap me-2"></i>Información del Examen</h6>
                    <p class="mb-1"><strong>Estudiante:</strong> Marcelo Torres Loor</p>
                    <p class="mb-1"><strong>Materia:</strong> Desarrollo Web II</p>
                    <p class="mb-0"><strong>Funcionalidad:</strong> Tabla HTML con datos de entidad Casa usando renderizado del servidor</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Agregar efecto hover a las filas de la tabla
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.02)';
                    this.style.transition = 'transform 0.2s ease';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });

            console.log('📊 Tabla de casas cargada exitosamente');
            console.log('🏠 Total de casas:', '<%= totalCasas || 0 %>');
            console.log('💰 Valor total:', '$<%= (valorTotal || 0).toLocaleString() %>');
        });
    </script>
</body>
</html>
